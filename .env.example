AUTOMAGIK_SPARK_ENCRYPTION_KEY=eW91ci10ZXN0LWVuY3J5cHRpb24ta2V5LS0tLS0tLS0=

# Celery Configuration
AUTOMAGIK_SPARK_CELERY_BROKER_URL=redis://localhost:16379/0
