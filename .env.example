# Environment
ENV=development

# PostgreSQL Configuration (for docker-compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=user
POSTGRES_DB=automagik

# Database Configuration
DATABASE_URL=postgresql://user:user@localhost:5432/automagik

# Redis & Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Langflow Configuration
LANGFLOW_API_URL=http://localhost:7860
LANGFLOW_API_KEY=

# API Configuration
AUTOMAGIK_API_HOST=0.0.0.0
AUTOMAGIK_API_PORT=8000
AUTOMAGIK_API_CORS=http://localhost:3000,http://localhost:8000
AUTOMAGIK_API_KEY=

# Timezone Configuration
TIMEZONE=UTC

# Debug Mode
AUTOMAGIK_DEBUG=0

# Logging Configuration
AUTOMAGIK_WORKER_LOG=~/.automagik/logs/worker.log